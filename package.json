{
  "name": "er-maker",
  "productName": "ER Maker",
  "description": "Create ER diagrams from databases and SQL - A powerful desktop application for designing Entity-Relationship diagrams",
  "private": true,
  "version": "0.1.0",
  "author": {
    "name": "EV-OD",
    "url": "https://github.com/EV-OD"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EV-OD/sqlIDE"
  },
  "license": "MIT",
  "keywords": [
    "er-diagram",
    "database",
    "sql",
    "postgresql",
    "mysql",
    "mariadb",
    "entity-relationship",
    "diagram",
    "tauri",
    "desktop"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "pre-build": "bash -c 'if [[ \"$(uname -s)\" == \"Linux\" ]]; then pnpm run mariadb:build; else echo \"Skipping MariaDB build on non-Linux platform\"; fi'",
    "prebuild": "pnpm run pre-build",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "generate-icons": "bash scripts/generate-icons.sh",

    "mariadb:prune": "bash scripts/prune-to-minimal.sh src-tauri/bundled/mariadb/linux-x86_64 -y",
    "mariadb:generate-cnf": "bash scripts/generate-mycnf.sh src-tauri/bundled/mariadb/linux-x86_64 dist",
    "mariadb:package": "bash scripts/package-minimal-mariadb.sh src-tauri/bundled/mariadb/linux-x86_64 mariadb-linux-x86_64-minimal-10.6.24.tar.xz",
    "mariadb:test-install": "bash scripts/test-bundle-install.sh",
    "mariadb:build": "pnpm run mariadb:prune && pnpm run mariadb:package",
    "mariadb:remove": "bash scripts/remove-project-mariadb.sh"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@monaco-editor/react": "^4.7.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-opener": "^2",
    "ag-grid-community": "^35.0.0",
    "ag-grid-react": "^35.0.0",
    "clsx": "^2.1.1",
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.468.0",
    "mermaid": "^11.4.0",
    "monaco-editor": "^0.55.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.54.0",
    "react-resizable-panels": "^4.2.0",
    "react-zoom-pan-pinch": "^3.6.1",
    "tailwind-merge": "^2.6.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}
